@{
    ViewBag.Title = "About";
}

<main class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card border-primary shadow">
                <div class="card-body">
                    <h2 class="card-title">@ViewBag.Title</h2>
                    <h3 class="card-subtitle mb-2 text-muted">@ViewBag.Message</h3>
                    <p class="card-text">We are a passionate team dedicated to providing high-quality solutions to our customers.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-primary shadow">
                <div class="card-body">
                    <h3 class="card-title">Our Mission</h3>
                    <p class="card-text">To innovate, create, and deliver the best products and services that meet the needs of our customers.</p>
                </div>
            </div>
            <div class="card mt-4 border-primary shadow">
                <div class="card-body">
                    <h3 class="card-title">Our Values</h3>
                    <ul class="list-group">
                        <li class="list-group-item">Customer Satisfaction</li>
                        <li class="list-group-item">Integrity</li>
                        <li class="list-group-item">Innovation</li>
                        <li class="list-group-item">Teamwork</li>
                        <li class="list-group-item">Quality</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>
